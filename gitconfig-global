# Global git configuration
# Updated 2019-10-28.

[core]
	editor = vim
	excludesfile = ~/.gitignore
[color]
	ui = true
[status]
    # > submoduleSummary = true

[push]
	default = simple
[fetch]
	fsckobjects = true
	zeroPaddedFilemode = ignore
[receive]
	fsckobjects = true
[transfer]
	fsckobjects = true

# oh-my-zsh will fail to clone unless these are set.
# > git config --global fetch.fsck.zeroPaddedFilemode warn
# > git config --global receive.fsck.zeroPaddedFilemode warn
# > git config --global transfer.fsck.zeroPaddedFilemode warn
# > git config --global fsck.zeroPaddedFilemode warn

[fsck]
	zeroPaddedFilemode = warn
[fetch "fsck"]
	zeroPaddedFilemode = warn
[receive "fsck"]
	zeroPaddedFilemode = warn
[transfer "fsck"]
	zeroPaddedFilemode = warn

[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process

[alias]
	aa = add --all
    br = branch
    ci = commit
	cm = commit -m
    co = checkout
	cleanup = !git remote prune origin \
        && git gc \
        && git clean -dfx \
        && git stash clear
	grog = log --graph --abbrev-commit --decorate --all
    last = log -1 HEAD
	pr = !sh -c 'git fetch origin pull/$1/head:pr$1' -
	shorty = status --short --branch
	st = status -sb
	trash = checkout --
    unstage = reset HEAD --
	up = !sh -c 'git pull --rebase --prune && git log --pretty=format:\"%Cred%ae %Creset- %C(yellow)%s %Creset(%ar)\" HEAD@{1}..'
	who = shortlog -n -s --no-merges

