[user]
	# Name used in commit messages.
	name = Michael Steinbaugh
	# Email used in commit messages.
	email = mike@steinbaugh.com
	# Public PGP key used for commit signing.
	# signingkey = C1BB2E4A7C4FF992
[shell]
	# Default SSH username.
	username = mike
[github]
	# GitHub username for command line tools.
	user = mjsteinbaugh
[core]
	editor = vim
	excludesfile = ~/.gitignore_global
[commit]
	# gpgsign = true
[push]
	default = simple
[color]
	ui = true
[credential]
	helper = osxkeychain
[alias]
	a = add --all
	c = commit -m
	cleanup = !git remote prune origin && git gc && git clean -dfx && git stash clear
	grog = log --graph --abbrev-commit --decorate --all --format=format:\"%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(dim white) - %an%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n %C(white)%s%C(reset)\"
	pr = !sh -c 'git fetch origin pull/$1/head:pr$1' -
	shorty = status --short --branch
	st = status -sb
	trash = checkout --
	up = !sh -c 'git pull --rebase --prune && git log --pretty=format:\"%Cred%ae %Creset- %C(yellow)%s %Creset(%ar)\" HEAD@{1}..'
	who = shortlog -n -s --no-merges
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
[fetch] 
	fsckobjects = true
	zeroPaddedFilemode = ignore
[receive] 
	fsckobjects = true
[transfer] 
	fsckobjects = true
[fetch "fsck"]
	zeroPaddedFilemode = warn
[receive "fsck"]
	zeroPaddedFilemode = warn
[transfer "fsck"]
	zeroPaddedFilemode = warn
[fsck]
	zeroPaddedFilemode = warn
[status]
	submoduleSummary = true
