" Ensure dark mode is enabled by default.
set background=dark

" Use SF Mono, 16 pt by default.
set guifont=SF\ Mono\ Regular:h16

" Donâ€™t blink cursor in normal mode.
set guicursor=n:blinkon0

" Better line-height.
set linespace=8
