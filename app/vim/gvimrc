" Maximize the window by default.
set columns=9999
set lines=999

" Donâ€™t blink cursor in normal mode.
set guicursor=n:blinkon0

" Set default font.
set guifont=JetBrains\ Mono\ Regular:h16

" Customize the line height.
" > set linespace=8

set shell=/usr/local/bin/zsh
